<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Toast!"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />
    <Button
        android:id="@+id/tblToast"
        android:layout_width="match_parent"
        android:text="TOAST"
        android:textSize="30dp"
        android:onClick="toastklik"
        android:background="@color/biru"
        android:textColor="@color/putih"
        android:layout_height="wrap_content"
        tools:ignore="UsingOnClickInXml" />
    <TextView
        android:id="@+id/kounter"
        android:layout_width="match_parent"
        android:text="0"
        android:textSize="190dp"
        android:textColor="@color/biru"
        android:background="@color/kuning"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/tblCount"
        android:layout_width="match_parent"
        android:text="COUNT +"
        android:textSize="30dp"
        android:onClick="tblkounter"
        android:background="@color/biru"
        android:textColor="@color/putih"
        android:layout_height="wrap_content"
        tools:ignore="UsingOnClickInXml" />
    <Button
        android:id="@+id/tblCountmin"
        android:layout_width="match_parent"
        android:text="COUNT -"
        android:textSize="30dp"
        android:onClick="tblkountermin"
        android:background="@color/biru"
        android:textColor="@color/putih"
        android:layout_height="wrap_content"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/tblRest"
        android:layout_width="match_parent"
        android:text="REST"
        android:textSize="30dp"
        android:onClick="tblrest"
        android:background="@color/biru"
        android:textColor="@color/putih"
        android:layout_height="wrap_content"
        tools:ignore="UsingOnClickInXml" />

</LinearLayout>